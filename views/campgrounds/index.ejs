                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= c.title %>
                            </h5>
                            <p class="card=text">
                                <%= c.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
