<% layout('layouts/boilerplate') %>
    <div id="cluster-map" style="width: 100; height: 500px;"></div>

    <h1>All Campgrounds</h1>

    <% for(let c of camps){ %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(c.images.length) {%>
                        <img crossorigin="anonymous" class="img-fluid" src="<%= c.images[0].url %>" alt="image of camp">
                        <% } else{ %>
                            <img crossorigin="anonymous" class="img-fluid"
                                src="https://res.cloudinary.com/deohtndpz/image/upload/v1701861380/YelpCamp/vt0kkp1ihomrosslayxi.webp">
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= c.title %>
                        </h5>
                        <h5 class="card-title">
                            <!-- <%= c.properties.popUpMarkup %> -->
                        </h5>
                        <p class="card=text">
                            <%= c.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=c.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= c._id %>">View <%= c.title %></a>
                    </div>
                </div>
            </div>

        </div>


        <% } %>
            <script>
                const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
                const camps = { features: <%-JSON.stringify(camps)%>}
            </script>

            <script src="/js/clusterMap.js"></script>